@using MvcCv.DAL.Entities
@model List<Experience>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Deneyimler</h2>
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Başlık</th>
        <th>Görev</th>
        <th>Tarih</th>
        <th>Sil</th>
        <th>Düzenle</th>
    </tr>
    @foreach(var item in Model)
    {
        <tr>
            <td>@item.ID</td>
            <td>@item.Title</td>
            <td>@item.Subdescription</td>
            <td>@item.Date</td>
            <td><a href="/Experience/DeleteExperience/@item.ID" class="btn btn-danger"> Sil</a></td>
            <td><a href="/Experience/GetExperience/@item.ID" class="btn btn-warning">Düzenle</a></td>
        </tr>
    }    
</table>

<a href="/Experience/AddExperience" class="btn btn-primary">Yeni Deneyim Ekle</a>

