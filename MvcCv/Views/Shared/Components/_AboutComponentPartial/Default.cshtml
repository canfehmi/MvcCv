@using MvcCv.DAL.Entities
@model List<About>

@foreach (var item in Model)
{
    <section class="resume-section" id="about">
        <div class="resume-section-content">
            <h1 class="mb-0">
                @item.Name
                <span class="text-primary">@item.Surname</span>
            </h1>
            <div class="subheading mb-5">
                @item.Adress · @item.Telephone ·
                <a href="mailto:n.fehmi26@gmail.com">@item.Mail</a>
            </div>
            <p class="lead mb-5">@item.Description</p>
            @await Component.InvokeAsync("_SocialMediaComponentPartial")
            
        </div>
    </section>
}
<hr class="m-0" />